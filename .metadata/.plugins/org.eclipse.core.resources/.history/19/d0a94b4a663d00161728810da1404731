package com.mallimander.particulate;

import com.badlogic.gdx.graphics.Texture;

public class Particle {
	
	public int x;
	public int y;
	public float xS;
	public float yS;
	public int lSpan;
	private Texture t;
	
	public Particle (int x, int y, float xSpeed, float ySpeed, int lifeSpan, Texture tex){
		this.x = x;
		this.y = y;
		xS = xSpeed;
		yS = ySpeed;
		lSpan = lifeSpan;
		t = tex;
		
	}
	
	public void setTexture(Texture tex){
		t = tex;
	}
	public Texture getTexture(){
		return t;
	}
	
	

}
